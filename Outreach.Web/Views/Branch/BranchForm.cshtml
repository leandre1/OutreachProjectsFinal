@model  Outreach.Entities.ViewModels.BranchFormViewModel.BranchFormViewModel

@using (Html.BeginForm("Save", "Branch"))
{
    @Html.ValidationSummary(true,"Please fix the following errors!")
    <div class="form-group">
        @Html.LabelFor(m => m.Branch.Name)
        @Html.TextBoxFor(m => m.Branch.Name,new { @class="form-control"})
        @Html.ValidationMessageFor(m =>m.Branch.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Branch.Location)
        @Html.TextBoxFor(m => m.Branch.Location, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Branch.Location)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Branch.HouseId)
        @Html.DropDownListFor(n => n.Branch.HouseId,new SelectList(Model.Houses,"HouseId","Description"),"Select house",new { @class="form-control"})
        @Html.ValidationMessageFor(m => m.Branch.HouseId)
    </div>

    @Html.HiddenFor(m => m.Branch.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}
