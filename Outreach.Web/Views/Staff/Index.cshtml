@model IEnumerable<Outreach.Entities.StaffEmployee.StaffVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<a href="@Url.Action("New","Staff")" class="btn btn-primary">Add Staff</a>
<table id="staff" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date Of Registration</th>
            <th>Date of Birth</th>
            <th>Type of Staff</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var s in Model)
        {
            <tr>
                <td>@Html.ActionLink(s.Staff.FirstName,"Edit","Staff",new { id = s.Staff.Id},null)</td>
                <td>@s.Staff.LastName</td>
                <td>@s.Staff.DateOfRegistration</td>
                <td>@s.Staff.BirthDate</td>
                <td>@s.Category.Category</td>
            </tr>
            
        }
    </tbody>

</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#staff").DataTable();
        });
    </script>
    
    }
